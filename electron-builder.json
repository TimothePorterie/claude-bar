{
  "appId": "com.claude-bar.app",
  "productName": "Claude Bar",
  "directories": {
    "output": "release",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "assets/**/*"
  ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
  "asar": true,
  "asarUnpack": [
    "**/*.node"
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "icon": "assets/app-icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64", "x64"]
      }
    ],
    "entitlements": "entitlements.mac.plist",
    "entitlementsInherit": "entitlements.mac.plist",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "minimumSystemVersion": "10.13"
  },
  "dmg": {
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "title": "Claude Bar",
    "icon": "assets/app-icon.icns",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "publish": {
    "provider": "github",
    "owner": "TimothePorterie",
    "repo": "claude-bar",
    "releaseType": "release"
  }
}
