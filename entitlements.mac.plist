<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for Electron's V8 engine -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <!-- Required for loading Electron framework -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    <!-- Required for Keychain access (reading Claude Code credentials) -->
    <key>keychain-access-groups</key>
    <array>
        <string>$(AppIdentifierPrefix)com.claude-bar.app</string>
    </array>
    <!-- Network access for Anthropic API -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>
